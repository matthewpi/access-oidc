{
	"name": "@matthewpi/access-oidc",
	"description": "OpenID Connect server running on Cloudflare Workers and authenticated by Cloudflare Access",
	"version": "0.0.1",
	"license": "MIT",
	"private": true,
	"main": "dist/index.mjs",
	"type": "module",
	"packageManager": "yarn@3.2.0",
	"engines": {
		"node": ">=16.7",
		"yarn": ">=1.22.0"
	},
	"scripts": {
		"postinstall": "husky install",
		"clean": "rm -f dist/*",
		"build": "cross-env NODE_ENV=development $npm_node_execpath build.mjs",
		"build:production": "cross-env NODE_ENV=production $npm_node_execpath build.mjs",
		"dev": "miniflare --debug --watch --build-command \"$npm_execpath run build\" --kv KV_OIDC"
	},
	"dependencies": {
		"~": "link:./src"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "3.4.0",
		"@yarnpkg/esbuild-plugin-pnp": "2.0.1",
		"cron-schedule": "3.0.5",
		"cross-env": "7.0.3",
		"esbuild": "0.14.30",
		"eslint": "8.12.0",
		"husky": "7.0.4",
		"lint-staged": "12.3.7",
		"miniflare": "2.4.0",
		"prettier": "2.6.2",
		"typescript": "4.6.3",
		"xo": "0.48.0"
	},
	"lint-staged": {
		"src/**/*.{d.ts,ts}": [
			"yarn xo",
			"yarn prettier --write"
		],
		"**/*.{json,md}": [
			"yarn prettier --write"
		]
	},
	"volta": {
		"node": "16.14.2",
		"yarn": "1.22.18"
	},
	"xo": {
		"environments": [
			"esnext"
		],
		"prettier": true,
		"rules": {
			"@typescript-eslint/naming-convention": 0,
			"capitalized-comments": 0,
			"import/extensions": 0,
			"new-cap": 0
		}
	}
}
